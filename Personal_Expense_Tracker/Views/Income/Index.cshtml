@model List<Transaction>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SidebarLayout.cshtml";
}

<h1>Index</h1>


<a href="/income/AddIncome" class="btn btn-info">Gelir Ekle</a>
<br />
<br/>
<table class="table table-bordered">
    <tr>
        <th>Gelir</th>
        <th>Tarih</th>
        <th>Tutar</th>
        <th>Kategori</th>
        <th>Sil</th>
     
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.FormatedDate</td>
            <td>@item.Amount</td>
            <td>@item.Category</td>
            <td><a href="/income/DeleteIncome/@item.Id" class="btn btn-danger" >Sil</a></td>
            
        </tr>
    }
</table>