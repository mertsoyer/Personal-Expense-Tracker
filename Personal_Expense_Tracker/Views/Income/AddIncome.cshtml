@model Transaction
@{
    ViewData["Title"] = "AddIncome";
    Layout = "~/Views/Shared/_SidebarLayout.cshtml";
}

<h1>Gelir Ekle</h1>

<form asp-action="AddIncome" asp-controller="Income" method="post">

    <input type="text" asp-for="Name" placeholder="Gelir açıklaması" />

    <input type="date" asp-for="Date" placeholder="Tarih" />
    <input type="text" asp-for="Amount" placeholder="Tutar" />
    
    @Html.DropDownListFor(x => x.Category.CategoryId, (List<SelectListItem>
       )ViewBag.kategoriListele, new { @class = "form-control" })

    <button>Ekle</button>

</form>

