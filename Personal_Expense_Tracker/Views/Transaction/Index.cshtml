    </tr>
    @foreach (var transaction in Model.Expenses)
    {
        <tr>
                <td>@transaction.Name</td>
                <td>@transaction.Amount</td>
                <td>@transaction.Date.ToString("MM/dd/yyyy")</td>

        </tr>
        
    }
    <tr>
        <td>Toplam</td>
