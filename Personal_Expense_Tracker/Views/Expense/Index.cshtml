@model TransactionListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SidebarLayout.cshtml";
}

<h1>Giderler</h1>

<form asp-action="Index" asp-controller="Expense" method="post">

    <input type="date" id="txtSelectedDate" name="startDate" />
    <input type="date" id="txtSelectedDate" name="endDate" />
    <input type="submit" value="Tarihe Göre Filtreleme" />
@*    <input type="submit" name="today" value="Bugün" />
    <input type="submit" name="thisWeek" value="Bu Hafta" />
    <input type="submit" name="thisMounth" value="Bu Ay" />
    <input type="submit" name="allTime" value="Tüm Zamanlar" />*@

    <button type="submit" name="btnsearch" value="today">Bugün</button>
    <button type="submit" name="btnsearch" value="thisWeek">Bu Hafta</button>
    <button type="submit" name="btnsearch" value="thisMounth">Bu Ay</button>
    <button type="submit" name="btnsearch" value="allTime">Tüm Zamanlar</button>

    <script type="text/javascript">
        $(function () {
            $('#txtSelectedDate').datepicker({
                changeMonth: true,
                changeYear: true,
                format: "dd/mm/yyyy",
                language: "tr"
            });
        });
    </script>
</form>

<a href="/expense/AddExpense" class="btn btn-info">Harcama Ekle</a>
<br />
<table class="table table-bordered">
    <tr>
        <th>İşlem Adı</th>
        <th>Tarih</th>
        <th>Tutar</th>
        <th>Kategori</th>
        <th>Güncelle</th>
        <th>Sil</th>

    </tr>
    @foreach (var item in Model.Transactions)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.FormatedDate</td>
            <td>@item.Amount</td>
            <td>@item.Category.Name</td>
            <td><a href="/expense/UpdateExpense/@item.Id" class="btn btn-success">Güncelle</a></td>
            <td><a href="/expense/DeleteExpense/@item.Id" class="btn btn-danger">Sil</a></td>

        </tr>
    }

    <tr>
        <td></td>
        <td>Toplam Tutar</td>
        <td>@Model.TransactionSum</td>
    </tr>
</table>