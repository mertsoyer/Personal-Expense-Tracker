@model Transaction
@{
    ViewData["Title"] = "AddExpense";
    Layout = "~/Views/Shared/_SidebarLayout.cshtml";
}

<h1>AddExpense</h1>


<form asp-action="AddExpense" asp-controller="Expense" method="post">

    <input type="text" asp-for="Name" placeholder="Harcama adı" />
    <input type="date" asp-for="Date" asp-format="{0:dd/MM/yyyy}" placeholder="Tarih" />
    <input type="text" asp-for="Amount" placeholder="Tutar" />
    
    @Html.DropDownListFor(x => x.Category.CategoryId, (List<SelectListItem>
       )ViewBag.kategoriListele, new { @class = "form-control" })

    <button>Ekle</button>

</form>
